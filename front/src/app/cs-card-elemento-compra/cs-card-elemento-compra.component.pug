.main-card-container
  mat-card(class="example-card")
    mat-card-header
      div(mat-card-avatar class="example-header-image")
      mat-card-title {{ producto_item.nombre_producto}}
      mat-card-subtitle {{ producto_item.nombre_categoria}}
    img.imagen(mat-card-image [src]="imagen" alt="Photo of a Shiba Inu")
    mat-card-content
      h3
      |  Este producto cuesta {{ producto_item.precio}}
    mat-card-actions
      button(mat-button, (click)='agregar()', [disabled]='!valid_card')  AGREGAR
